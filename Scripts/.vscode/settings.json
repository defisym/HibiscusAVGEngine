{
    "conf.AvgScript.basePath": "F:\\DEV\\Mobius\\程序\\data",
    "conf.AvgScript.commandExtension": [
        {
            "prefix": "@",
            "command": "CallPhone",
            "description": [
                "\t@CallPhone:X:Y:Name:Avatar:PhoneNumber",
                "创建手机，并将界面移动至(X,Y)坐标处。其中短信界面显示的头像路径为`Avatar`，电话号码为`PhoneNumber`",
                "该指令会进行转译，自动执行`@MoveObj`指令，用于移动对象，执行`@DisableUI`指令，用于禁用UI，执行`#Wait`指令，强制主程序进入演出等待阶段"
            ],
            "minParam": 5,
            "maxParam": 5,
            "paramType": [
                "Number",
                "Number",
                "String",
                "Any",
                "Any",
            ],
            "inlayHint": [
                "XPos",
                "YPos",
                "Name",
                "Avatar",
                "PhoneNumber",
            ]
        }
    ],
    "conf.AvgScript.replaceScript": [
        // conver to English char
        {
            "regex": "：",
            "repStr": ":"
        },
        {
            "regex": "（",
            "repStr": "("
        },
        {
            "regex": "）",
            "repStr": ")"
        },
        // conver script
        {
            "regex": "(.*)(\\((([a-zA-z]).*)\\))[:：][\\s]?[“「](.*)[”」]",
            "repStr": "// $1 $2\n$1:$5\n@CharChange=$4\\$3:ID"
        },
        {
            "regex": "(@CharChange=.*?)(-[左中右])(:)",
            "repStr": "$1$3"
        },
        {
            "regex": "(.*)[:：][\\s]?[“「](.*)[”」]",
            "repStr": "$1:$2"
        },
        {
            "regex": "^「(.*)」",
            "repStr": "// Unknown\n$:$1"
        },
        {
            "regex": "(场景[:：][\\s]*(.*))",
            "repStr": "// $1\n@CG=$2"
        },
        {
            "regex": "(时间[:：].*)",
            "repStr": "// $1"
        },
        {
            "regex": "(【.*】)",
            "repStr": "// $1"
        },
        {
            "regex": "(基利尔):",
            "repStr": "$1[<PF1>]"
        },
        {
            "regex": "(墨威):",
            "repStr": "$1[<PF2>]"
        },
        {
            "regex": "(菲利雅):",
            "repStr": "$1[<PF3>]"
        },
        {
            "regex": "(丽丽娅):",
            "repStr": "$1[<PF4>]"
        },
        {
            "regex": "(威廉|菲尔):",
            "repStr": "$1[<PF5>]"
        },
        {
            "regex": "(爱[奈倷]):",
            "repStr": "$1[<PF6>]"
        },
        {
            "regex": "(赛里斯):",
            "repStr": "$1[<PF7>]"
        },
    ]
}