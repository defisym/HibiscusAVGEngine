  "Play Video": {
    "prefix": "Video",
    "body": [
      "#Begin 参考视频播放",
      "",
      "    /*使用黑色CG作为遮罩实现淡入效果*/",
      "    #hideUI",
      "    @cg=black.png",
      "    #Wait",
      "    @cg=null.png",
      "",
      "    /*播放*/",
      "    @PlayVideo=$1",
      "    @VideoWait",
      "",
      "    /*另一种写法*/",
      "    /*",
      "        @OpenVideo=DemoVideo.avi",
      "        @SetVideoPos=0",
      "        @VideoResume",
      "        @VideoWait",
      "    */",
      "",
      "    /*跳转处理*/",
      "    #Wait",
      "    #jmpfra=1",
      "    #EOF",
      "",
      "#End"
    ],
    "description": "Play Video"
  },
  "Basic Template": {
    "prefix": "Basic",
    "body": [
      "#Begin 参考初始化",
      "    /*这一整行都是注释区块*/",
      "    /*该章节导演代码仅供参考*/",
      "    ;注释区块外以';'开头的行会被视为跳转标签",
      "    ",
      "    @bgmloop=$1:0:0",
      "    ",
      "    /*CG、姓名栏与对话框默认为空，初始化时需手动指定*/",
      "    @cg=$2",
      "    ",
      "    @dia=$3",
      "    @name=$4",
      "",
      "    #diacolor:0:0:0",
      "    #namecolor:255:255:255",
      "",
      "#End",
      "",
      "#Begin 参考文本",
      "    /*存在冒号的句子会被解析为对白，不存在冒号的会被解析为旁白*/",
      "    您哪位:这是历史记录中会显示头像的场合",
      "    /*括号开始的行会被忽略，没有任何作用*/",
      "    (这里进行普通的演出)",
      "#End",
      "",
      "#Begin 演出内容",
      "",
      "    /*请将需要调试的导演代码粘贴至此*/",
      "    /*↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓*/",
      "    $6",
      "    /*↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑*/",
      "",
      "#End",
      "",
      "#Begin 文件尾",
      "",
      "    /*文件的最后一条有效指令必须为跳转指令*/",
      "    /*#jmpfra=*/",
      "    #jmpcha=$5",
      "    /*文件的末尾必须为#EOF*/",
      "    #EOF",
      "",
      "#End"
    ],
    "description": "Basic Template"
  },
  "One Line Dialogue Size Change": {
    "prefix": "Size",
    "body": [
      "#DiaSize=$1",
      "$3",
      "#DiaSize=$2"
    ],
    "description": "Small Dialogue"
  },
  "Flash": {
    "prefix": "Flash",
    "body": [
      "#FNT",
      "@Char=..\\CG\\white.png:-10",
      "#FNTO",
      "@chardispose=-10"
    ],
    "description": "Flash"
  },
  "SkipAnchor": {
    "prefix": "SkipAnchor",
    "body": [
      "#SkipAnchor",
      "",
      "#NJMP=$1",
      "#FNT",
      "@CharAllDispose",
      "@TransitionSpeed=10",
      "$2",
      "#FNTO",
      "",
      ";$1"
    ],
    "description": "Re-init after JMP"
  },
  "Create Sepia": {
    "prefix": "Create Sepia",
    "body": [
      "@Fade",
      "#Wait",
      "@SepiaToning:0.5:On:300",
      "@Char=..\\FX\\Memory.png:20:0:0:0",
      "#Wait",
      "@DestroyFade"
    ],
    "description": "Create Sepia"
  },
  "Dispose Sepia": {
    "prefix": "Dispose Sepia",
    "body": [
      "@Fade",
      "#Wait",
      "@chardispose:-5",
      "@chardispose:20",
      "#Wait",
      "@DestroyFade"
    ],
    "description": "Dispose Sepia"
  },
  "Scene Transition": {
    "prefix": "Transition",
    "body": [
      "@TextFadeOut",
      "@PF=$1",
      "#Wait",
      "@CG=$2",
      "#DefineRGB=$3:$4:$5",
      "#Wait",
      "@PFO=$6.png",
      "@dia=$7.png",
      "@name=$8.png"
    ],
    "description": "Scene Transition"
  },
  "VNMode Template": {
    "prefix": "VNMode",
    "body": [
      "#Settings=VNMod",
      "",
      "#Begin 初始化",
      "",
      "   #diacolor:254:254:254",
      "   #diashaderon:1:0:0:0",
      "",
      "   @CG=VNMBG.png",
      "   @dia=VNModeBG.png",
      "",
      "   @bgmloop=$1",
      "",
      "#End",
      "",
      "#Begin 演出内容",
      "",
      "    /*请将需要调试的导演代码粘贴至此*/",
      "    /*↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓*/",
      "    $3",
      "    /*↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑*/",
      "",
      "   @TextFadeOut",
      "   #Wait",
      "",
      "#End",
      "",
      "#Begin 文件尾",
      "",
      "   /*文件的最后一条有效指令必须为跳转指令*/",
      "   #JmpFra=$2",
      "   /*文件的末尾必须为#EOF*/",
      "   #EOF",
      "",
      "#End"
    ],
    "description": "VNMode Init"
  }
