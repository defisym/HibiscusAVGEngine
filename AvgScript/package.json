{
    "name": "avgscript",
    "displayName": "Avg Script",
    "description": "Hibiscus AVG Engine AvgScript Support for VS Code",
    "version": "0.0.0",
    "publisher": "Defisym",
    "repository": "https://github.com/defisym/HibisucsAVGEngine/tree/main/AvgScript",
    "homepage": "https://github.com/defisym/HibisucsAVGEngine/tree/main/AvgScript",
    "icon": "media/AvgScript.png",
    "_comment": "./out/extension.js during debug and ./dist/extension.js when releasing",
    "main": "./dist/extension.js",
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes"
    ],
    "extensionDependencies": [
        "sukumo28.wav-preview"
    ],
    "contributes": {
        "languages": [
            {
                "id": "AvgScript",
                "aliases": [
                    "Avg Script",
                    "AvgScript"
                ],
                "extensions": [
                    ".asc"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "media/AvgScript.png",
                    "dark": "media/AvgScript.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "AvgScript",
                "scopeName": "source.avgscript",
                "path": "./syntaxes/AvgScript.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "AvgScript",
                "path": "./snippets/snippets.json"
            }
        ],
        "themes": [
            {
                "label": "AvgScript",
                "uiTheme": "vs-dark",
                "path": "./themes/AvgScript-color-theme.json"
            }
        ],
        "configuration": [
            {
                "id": "AvgScript",
                "title": "AvgScript",
                "order": 2,
                "properties": {
                    "conf.AvgScript.basePath": {
                        "type": "string",
                        "order": 0,
                        "description": "Base path for the assets files"
                    },
                    "conf.AvgScript.commandExtension": {
                        "type": "array",
                        "order": 1,
                        "description": "Command extension",
                        "items": {
                            "required": [
                                "prefix",
                                "command",
                                "minParam",
                                "maxParam",
                                "paramType"
                            ],
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "prefix": {
                                    "enum": [
                                        "@",
                                        "#"
                                    ],
                                    "description": "Command prefix"
                                },
                                "command": {
                                    "type": "string",
                                    "description": "Command"
                                },
                                "description": {
                                    "type": "array",
                                    "description": "Command description",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "minParam": {
                                    "type": "integer",
                                    "description": "min available param",
                                    "minimum": 0
                                },
                                "maxParam": {
                                    "type": "integer",
                                    "description": "max available param",
                                    "minimum": 0
                                },
                                "paramType": {
                                    "type": "array",
                                    "description": "Type of each param",
                                    "items": {
                                        "enum": [
                                            "String",
                                            "Number",
                                            "Boolean",
                                            "Volume",
                                            "ObjType",
                                            "Color",
                                            "File",
                                            "Any"
                                        ]
                                    }
                                },
                                "inlayHint": {
                                    "type": "array",
                                    "description": "Inlay hint type of each param",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ],
        "commands": [
            {
                "category": "AvgScript",
                "command": "config.AvgScript.basePath",
                "title": "Base path for the assets files",
                "icon": "media/AvgScript.png",
                "shortTitle": "Base Path"
            },
            {
                "category": "AvgScript",
                "command": "config.AvgScript.refreshAssets",
                "title": "Refresh Assets information",
                "icon": "media/AvgScript.png",
                "shortTitle": "Refresh Assets"
            },
            {
                "category": "AvgScript",
                "command": "config.AvgScript.updateCommandExtension",
                "title": "Update command extension",
                "icon": "media/AvgScript.png",
                "shortTitle": "Command Extension"
            },
            {
                "category": "AvgScript",
                "command": "config.AvgScript.getAssetsList",
                "title": "Get assets used in project",
                "icon": "media/AvgScript.png",
                "shortTitle": "Assets List"
            },
            {
                "category": "AvgScript",
                "command": "config.AvgScript.showJumpFlow",
                "title": "Show the jump flow in project",
                "icon": "media/AvgScript.png",
                "shortTitle": "Jump Flow"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "config.AvgScript.basePath",
                    "when": "editorLangId == AvgScript"
                },
                {
                    "command": "config.AvgScript.refreshAssets",
                    "when": "editorLangId == AvgScript"
                }
            ]
        }
    },
    "activationEvents": [
        "onLanguage:AvgScript",
        "onCommand:config.AvgScript.basePath",
        "onCommand:config.AvgScript.refreshAssets",
        "onCommand:config.AvgScript.updateCommandExtension",
        "onCommand:config.AvgScript.getAssetsList",
        "onCommand:config.AvgScript.showJumpFlow"
    ],
    "scripts": {
        "vscode:prepublish": "npm run package",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "esbuild": "^0.14.39",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "japanese": "^1.1.0",
        "pinyin-pro": "^3.10.0",
        "ini": "^3.0.0",
        "@zerodeps/image-probe": "^0.2.0",
        "music-metadata": "^7.12.3",
        "ffprobe": "^1.1.2",
        "ffprobe-static": "^3.0.0",
        "ts-loader": "^9.3.0",
        "typescript": "^4.4.4",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "japanese": "^1.1.0",
        "pinyin-pro": "^3.10.0",
        "ini": "^3.0.0",
        "@zerodeps/image-probe": "^0.2.0",
        "music-metadata": "^7.12.3",
        "ffprobe": "^1.1.2",
        "ffprobe-static": "^3.0.0",
        "path":"^0.12.7"
    }
}